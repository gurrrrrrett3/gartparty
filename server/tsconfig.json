{
    // gart's default tsconfig.json
    "compilerOptions": {
      "tsBuildInfoFile": "./dist/.tsbuildinfo",
      "incremental": true,
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "..",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist/",
      "removeComments": true,
      "esModuleInterop": true,
      "preserveSymlinks": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "alwaysStrict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["src", "../shared"],
    "exclude": ["node_modules", "dist"]
  }
  